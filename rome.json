{
  "linter": {
    "enabled": true,
    "ignore": [".next", ".storybook", ".yarn", "node_modules"],
    "rules": {}
  },
  "formatter": {
    "enabled": true,
    "ignore": [".next"],
    "indentStyle": "space",
    "indentSize": 2
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "quoteProperties": "asNeeded",
      "trailingComma": "all",
      "semicolons": "always"
    }
  },
  "organizeImports": {
    "enabled": true
  }
}
