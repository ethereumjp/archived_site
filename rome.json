{
  "linter": {
    "enabled": true,
    "ignore": [".next"],
    "rules": {
      "correctness": { "noShadowRestrictedNames": "warn" }
    }
  },
  "formatter": {
    "enabled": true,
    "ignore": [".next"],
    "indentStyle": "space",
    "indentSize": 2
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "quoteProperties": "asNeeded",
      "trailingComma": "all"
    }
  }
}
